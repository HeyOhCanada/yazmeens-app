<LayoutCreator>:
    size: 1024, 768
    page: 0

    StackLayout:
        id: preview
        spacing: 5

    RelativeLayout:
        size_hint: (.8,1)
        pos: (204.8,0)
        canvas:
            Color:
                rgb: (.3,.3,1)
            Rectangle:
                size: self.size
                pos: self.parent.pos
        Widget:
            canvas:
                Color:
                    rgb: .3,.3,.3
                Rectangle:
                    size: self.size
            size_hint: (.05,1)
        Button:
            text: 'Counter'
            size_hint: (None, None)
            size: (600, 200)
            pos: 50, 560
            on_release: root.clickEdit('counter',preview)
        Button:
            text: 'Delete'
            size_hint: (None, None)
            size: (600, 200)
            pos: 50, 360
            on_release: root.deleteMode = not root.deleteMode

