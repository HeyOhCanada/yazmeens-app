#: import Animation kivy.animation.Animation

<LayoutCreator>:
    size: 1024, 768
    closed: True
    StackLayout:
        id: preview
        size: 1024, 768
        pos: (0,0)
        spacing: 5

    RelativeLayout:
        id: sideBar
        #fired when x changes, e.g when it slides in/out   
        on_x: if self.x == 204 or self.x == 980: root.closed = not root.closed 
        size_hint: (.8,1)
        pos: (980,0)
        canvas:
            Color:
                rgb: (.3,.3,1)
            Rectangle:
                size: self.size
                pos: self.parent.pos
        Button:
            size_hint: (.05,1)
            #swaps the position between 204 and 980
            on_release: Animation(x=(-((sideBar.x-204)-776))+204,d=.5,t='in_out_quad').start(sideBar)
            
        Button:
            text: 'Counter'
            size_hint: (None, None)
            size: (600, 200)
            pos: 50, 560
            on_release: root.clickEdit('counter',preview)     
               
        ToggleButton:
            text: 'Delete'
            pos: 100, 360
            size_hint: (None, None)
            size: (100, 100)
            on_release: root.deleteMode = not root.deleteMode

